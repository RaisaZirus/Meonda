<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" style="-fx-padding: 10; -fx-background-color: #161616;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.browser.Controller.HistoryController">

   <Label prefHeight="42.0" prefWidth="400.0"
          style="-fx-font-size: 24px;
                 -fx-font-weight: bold;
                 -fx-text-fill: white;
                 -fx-background-color: linear-gradient(to right, #444, #222);
                 -fx-padding: 10;
                 -fx-background-radius: 10;
                 -fx-alignment: center;" text="        Browsing History" textAlignment="CENTER" textFill="WHITE" />
   <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
      <children>
         <ListView fx:id="historyListView" onMouseClicked="#handleHistoryClick" prefHeight="493.0" prefWidth="606.0" style="-fx-background-color: #8a8a8a;" />
      </children>
   </HBox>

   <Button onAction="#clearHistory" text="Clear History">
      <effect>
         <Reflection />
      </effect></Button>

</VBox>
